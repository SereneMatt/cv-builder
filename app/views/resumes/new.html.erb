<h1>Create new CV</h1>
<%= form_with scope: :resume, url: resumes_path, local: true do |form| %>
  <% if @resume.errors.any? %>
    <div id="error_explanation" class="field_with_errors">
      <h2>
        <%= pluralize(@resume.errors.count, "error") %>
        prohibited this CV from being created
      </h2>
      <ul>
        <% @resume.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= form.text_field :name, class: "form-control", placeholder: "NAME" %>
  </div>
  <div class="form-group">
    <%= form.text_field :role, class: "form-control", placeholder: "Designation" %>
  </div>
  <div class="form-group row">
    <div class="col-md-4">
      <%= fa_icon "phone" %>
      <%= form.text_field :contact_number, placeholder: "Phone Number" %>
    </div>
    <div class="col-md-4">
      <%= fa_icon "envelope" %>
      <%= form.text_field :email, placeholder: "Email Address" %>
    </div>
    <div class="col-md-4">
      <%= fa_icon "map-marker" %>
      <%= form.text_field :location, placeholder: "Place, COUNTRY" %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">ABCD</div>
    <div class="col-md-6">EFGH</div>
  </div>
  <%= form.label :describe_yourself %>
  <%= form.text_area :about %>
  
        <div class="field">
          <%= form.label :image %>
          <%= form.file_field :image %>
        </div>
        <%= form.submit %>
        
<% end %>

<%= link_to 'Home', home_index_path %>